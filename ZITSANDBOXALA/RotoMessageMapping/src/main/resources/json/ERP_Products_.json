{
  "openapi": "3.0.3",
  "info": {
    "title": "Product - Material data from ERP",
    "description": "<p>Product API - This API is used to get materials from SAP in Salesforce, depending on different filter-criteria</p>",
    "version": "1.0.11"
  },
  "servers": [
    {
      "url": "https://testapiroto-frank.test.apimanagement.eu10.hana.ondemand.com:443/Product"
    }
  ],
  "tags": [
    {
      "name": "products",
      "description": "Get products"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "summary": "Get product sortiment",
        "description": "",
        "operationId": "getSortiment",
        "tags": [
          "products"
        ],
        "parameters": [
          {
            "name": "SalesOrganizations",
            "in": "query",
            "description": "Requested Salesorganizations",
            "required": true,
            "schema": {
              "type": "array",
              "example": [
                "0100",
                "1400",
                "1600"
              ],
              "items": {
                "type": "string",
                "nullable": false,
                "maxLength": 5,
                "example": "3600"
              }
            }
          },
          {
            "name": "Languages",
            "in": "query",
            "description": "Target languages for ProductTexts and MarketingTexts",
            "required": true,
            "schema": {
              "type": "array",
              "example": [
                "DE",
                "IT",
                "EN"
              ],
              "items": {
                "type": "string",
                "nullable": false,
                "maxLength": 3,
                "example": "DE"
              }
            }
          },
          {
            "name": "PageNumber",
            "in": "query",
            "description": "Page number for data",
            "required": true,
            "schema": {
              "type": "integer",
              "nullable": false,
              "maxLength": 2000,
              "example": 1
            }
          },
          {
            "name": "PageSize",
            "in": "query",
            "description": "Size of a page",
            "required": true,
            "schema": {
              "type": "integer",
              "nullable": false,
              "maximum": 200,
              "example": 200
            }
          },
          {
            "name": "DateStart",
            "in": "query",
            "description": "Start date",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-04-28"
            }
          },
          {
            "name": "DateEnd",
            "in": "query",
            "description": "End date",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-04-28"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "products"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "products"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid requestparameter"
          }
        },
        "security": [
          {
            "ApiKeyAuth": [],
            "OAuth2": [
              "read:product"
            ]
          }
        ]
      }
    },
    "/productsPreview": {
      "get": {
        "summary": "Get products for preview",
        "description": "",
        "operationId": "getPreview",
        "tags": [
          "products"
        ],
        "parameters": [
          {
            "name": "SalesOrganizations",
            "in": "query",
            "description": "Requested Salesorganizations",
            "required": true,
            "schema": {
              "type": "array",
              "example": [
                "0100",
                "1400",
                "1600"
              ],
              "items": {
                "type": "string",
                "nullable": false,
                "maxLength": 5,
                "example": "3600"
              }
            }
          },
          {
            "name": "DateStart",
            "in": "query",
            "description": "Start date",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-04-28"
            }
          },
          {
            "name": "DateEnd",
            "in": "query",
            "description": "End date",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2024-04-28"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "products"
                  },
                  "items": {
                    "$ref": "#/components/schemas/ProductPreview"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "products"
                  },
                  "items": {
                    "$ref": "#/components/schemas/ProductPreview"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid requestparameter"
          }
        },
        "security": [
          {
            "ApiKeyAuth": [],
            "OAuth2": [
              "read:product"
            ]
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "required": [
          "MaterialNumber"
        ],
        "type": "object",
        "title": "Product",
        "properties": {
          "MaterialNumber": {
            "type": "string",
            "maxLength": 12,
            "example": 25667576531091
          },
          "EuropeanArticleNumber": {
            "description": "Stock Keeping Unit",
            "type": "string",
            "maxLength": 15,
            "example": "102658755"
          },
          "CrossPlantMaterialStatus": {
            "description": "Status_Picklist from 50 till 99",
            "type": "string",
            "maxLength": 2,
            "example": "50",
            "title": "Cross Plant Material Status"
          },
          "BaseUnitIso": {
            "description": "QuantityOfMeasure",
            "maxLength": 3,
            "type": "string",
            "example": "PCE"
          },
          "GrossWeight": {
            "description": "Weight",
            "type": "number",
            "multipleOf": 0.01,
            "example": 129.14,
            "title": "Gross Weight"
          },
          "WeightUnitIso": {
            "description": "UnitofWeight",
            "maxLength": 3,
            "type": "string",
            "example": "GRM"
          },
          "DeletionFlag": {
            "type": "boolean",
            "example": false
          },
          "AlternativeSearchTerms": {
            "description": "Customer Material Numbers",
            "maxLength": 200,
            "type": "string",
            "example": "48191000,27897297,239479"
          },
          "ProductTexts": {
            "type": "array",
            "xml": {
              "wrapped": true
            },
            "items": {
              "$ref": "#/components/schemas/ProductText"
            }
          },
          "SalesorgValues": {
            "type": "array",
            "xml": {
              "wrapped": true,
              "name": "Salesorgs"
            },
            "minItems": 1,
            "items": {
              "$ref": "#/components/schemas/SalesorgValues"
            }
          },
		  "DeliveryTimesByCountry": {
            "type": "array",
            "description": "The DeliveryTimes in Days for every requested Country",
            "xml": {
              "wrapped": true
            },
            "items": {
              "$ref": "#/components/schemas/DeliveryTime"
            }
          }
        },
        "xml": {
          "name": "product"
        }
      },
      "ProductPreview": {
        "type": "string",
        "title": "Preview",
        "maxLength": 18,
        "example": "231091",
        "xml": {
          "name": "productPreview"
        }
      },
      "ProductText": {
        "type": "object",
        "required": [
          "LanguageIso",
          "ProductName"
        ],
        "properties": {
          "LanguageIso": {
            "maxLength": 2,
            "type": "string",
            "example": "DE"
          },
          "ProductName": {
            "type": "string",
            "nullable": true,
            "maxLength": 255,
            "title": "Product Name",
            "description": "Name of the Product",
            "example": "PAAR UNTER. AUFH. 6MM R044 PATIO FOLD"
          },
          "Description": {
            "type": "string",
            "nullable": true,
            "maxLength": 4000,
            "example": "1.02/B"
          },
          "FollowupText": {
            "nullable": true,
            "type": "string",
            "example": "Alternative: see PI(794040)"
          }
        },
        "xml": {
          "name": "ProductText"
        }
      },
	  "DeliveryTime": {
        "type": "object",
        "required": [
          "LanguageIso",
          "DeliveryTimeByCountry"
        ],
        "properties": {
          "CountryIsoCode": {
            "maxLength": 3,
            "type": "string",
            "nullable": false,
            "example": "DE"
          },
          "DeliveryTime": {
            "type": "integer",
            "nullable": false,
            "maximum": 300,
            "title": "DeliveryTime",
            "description": "Delivery TImes per Country in Days",
            "example": "12"
          }
        },
        "xml": {
          "name": "DeliveryTimeByCountry"
        }
      },
      "SalesorgValues": {
        "type": "object",
        "xml": {
          "name": "SalesOrgValues",
          "wrapped": true
        },
        "required": [
          "SalesOrganization",
          "DistributionChannel",
          "DeliveryPlant",
          "CustomTariffNumber"
        ],
        "properties": {
          "SalesOrganization": {
            "maxLength": 5,
            "type": "string",
            "nullable": false,
            "example": "0100"
          },
          "DistributionChannel": {
            "type": "string",
            "nullable": true,
            "maxLength": 2,
            "title": "Distribution Channel",
            "example": "01"
          },
          "DeliveryPlant": {
            "type": "string",
            "nullable": true,
            "maxLength": 4,
            "title": "Delivery Plant",
            "example": "0101"
          },
          "SalesUnitIso": {
            "description": "VME per Salesorg",
            "maxLength": 3,
            "type": "string",
            "example": "PCE"
          },
          "QuantityMaxPackaging": {
            "type": "number",
            "multipleOf": 0.001,
            "example": 13.000,
            "title": "Quantity Max Packacking",
            "description": "ZMA in Base Unit Unit"
          },
          "QuantityMinPackaging": {
            "type": "number",
            "multipleOf": 0.001,
            "example": 3.000,
            "title": "Quantity Min Packacking",
            "description": "ZMI in Base Unit Unit"
          },
          "SalesorgMaterialStatus": {
            "maxLength": 2,
            "type": "string",
            "example": "10"
          },
          "PlantSpecificMaterialStatus": {
            "maxLength": 15,
            "type": "string",
            "example": "512123550"
          },
          "CustomTariffNumber": {
            "maxLength": 3,
            "type": "string",
            "example": "GRM"
          },
          "CountryOfOrigin": {
            "maxLength": 2,
            "type": "string",
            "example": "DE"
          },
          "MarketingTexts": {
            "type": "array",
            "description": "Salesorg and Language Specific Productnames",
            "xml": {
              "wrapped": true
            },
            "items": {
              "$ref": "#/components/schemas/MarketingText"
            }
          }
        }
      },
      "MarketingText": {
        "type": "object",
        "required": [
          "LanguageIso",
          "AlternativeProductText"
        ],
        "properties": {
          "LanguageIso": {
            "maxLength": 2,
            "type": "string",
            "example": "DE",
            "nullable": false
          },
          "AlternativeProductText": {
            "type": "string",
            "nullable": false,
            "maxLength": 255,
            "title": "Marketing Product Name",
            "description": "Marketing Name of the Product",
            "example": "PAAR UNTER. AUFH. 6MM R044 PATIO FOLD"
          }
        },
        "xml": {
          "name": "MarketingProductText"
        }
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "name": "x-api-key",
        "in": "header"
      },
      "OAuth2": {
        "type": "oauth2",
        "flows": {
          "clientCredentials": {
            "tokenUrl": "https://testapiroto-frank.test.apimanagement.eu10.hana.ondemand.com/oauth/GenerateToken",
            "scopes": {
              "read:products": "read products"
            }
          }
        }
      }
    }
  }
}